<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fluper.myapp.AddQuestionActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Question with answer"
        android:id="@+id/add_question"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:padding="30dp"
        />
       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/ques"
           android:layout_below="@+id/add_question"
           android:hint="Enter Question"
           />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ans_one"
        android:layout_below="@+id/ques"
        android:hint="Enter Ans One"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ans_two"
        android:layout_below="@+id/ans_one"
        android:hint="Enter Ans two"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ans_three"
        android:layout_below="@+id/ans_two"
        android:hint="Enter ans three"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ans_four"
        android:layout_below="@+id/ans_three"
        android:hint="Enter ans four"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ans_right"
        android:layout_below="@+id/ans_four"
        android:hint="Enter Right Ans"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/save"
        android:text="Save"
        android:layout_below="@+id/ans_right"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        />

</RelativeLayout>
